@model IEnumerable<MyIceDream.Models.Product>

<h1>Product List</h1>
<a asp-action="Create" class="btn btn-primary">Add Product</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    @if (product.ImageData != null)
                    {
                        <img src="data:@(Convert.ToBase64String(product.ImageData))"
                             alt="Product Image"
                             style="width: 100px;" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
